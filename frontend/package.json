  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "24.10.9",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "esbuild": "0.27.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3"
  }
